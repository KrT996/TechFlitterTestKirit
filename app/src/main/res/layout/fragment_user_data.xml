<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.UserDataFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin16"
        app:cardCornerRadius="@dimen/cardCornerRadius8"
        app:cardElevation="@dimen/cardElevation24"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clUserData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/exo2_regular"
                android:layout_marginTop="@dimen/margin16"
                android:layout_marginStart="@dimen/margin16"
                android:layout_marginEnd="@dimen/margin16"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kirit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/exo2_regular"
                android:layout_marginTop="@dimen/margin8"
                android:layout_marginStart="@dimen/margin16"
                android:layout_marginEnd="@dimen/margin16"
                app:layout_constraintTop_toBottomOf="@+id/tvId" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="kirit@gmail.com"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/exo2_regular"
                android:layout_marginTop="@dimen/margin8"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                app:layout_constraintStart_toStartOf="@+id/tvName"
                app:layout_constraintEnd_toEndOf="@+id/tvName"
                app:layout_constraintBottom_toTopOf="@+id/tvGender"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="male"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/exo2_regular"
                android:layout_marginTop="@dimen/margin8"
                app:layout_constraintTop_toBottomOf="@+id/tvEmail"
                app:layout_constraintStart_toStartOf="@+id/tvName"
                app:layout_constraintEnd_toEndOf="@+id/tvName"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/exo2_regular"
                android:layout_marginTop="@dimen/margin8"
                app:layout_constraintTop_toBottomOf="@+id/tvGender"
                app:layout_constraintStart_toStartOf="@+id/tvName"
                app:layout_constraintEnd_toEndOf="@+id/tvName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCreatedAt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2020-11-05T03:50:03.845+05:30"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/exo2_regular"
                android:layout_marginTop="@dimen/margin8"
                app:layout_constraintTop_toBottomOf="@+id/tvStatus"
                app:layout_constraintStart_toStartOf="@+id/tvName"
                app:layout_constraintEnd_toEndOf="@+id/tvName"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUpdatedAt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2020-11-05T19:33:18.957+05:30"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/exo2_regular"
                android:layout_marginTop="@dimen/margin8"
                android:layout_marginBottom="@dimen/margin16"
                app:layout_constraintTop_toBottomOf="@+id/tvCreatedAt"
                app:layout_constraintStart_toStartOf="@+id/tvName"
                app:layout_constraintEnd_toEndOf="@+id/tvName"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>